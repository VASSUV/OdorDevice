<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/primaryButton</item>
    </style>

    <style name="primaryButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.AppTheme.TextInputLayout" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="Widget.AppTheme.EditText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/gray</item>
    </style>

    <style name="becomeSubscriberTextInputLayout">
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
    </style>

</resources>
